{
  "name": "checkpoint",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": ">=9 <12"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prebuild": "node scripts/no-smoke-on-main.js || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:mocks": "jest tests/mocks/",
    "validate-contracts": "node scripts/validate-contracts.js",
    "check-bundle-size": "node scripts/check-bundle-size.js",
    "test:sentry": "jest tests/integration/sentry.test.ts",
    "test:timezone": "TZ=America/Los_Angeles jest tests/lib/derive/timezone.test.ts",
    "size": "size-limit"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.8.0",
    "@headlessui/react": "^2.2.9",
    "@sentry/nextjs": "^10.15.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@upstash/redis": "^1.25.0",
    "@vercel/kv": "^3.0.0",
    "apexcharts": "^5.3.5",
    "dotenv": "^16.4.5",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "msw": "^2.11.3",
    "next": "15.5.3",
    "react": "^18.3.1",
    "react-apexcharts": "^1.7.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.3",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.39",
    "size-limit": "^11.2.0",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4"
  },
  "size-limit": [
    {
      "path": ".next/static/chunks/*.js",
      "limit": "250 KB",
      "name": "Initial route JS"
    },
    {
      "path": ".next/static/chunks/app/*.js",
      "limit": "400 KB",
      "name": "Total app per route"
    }
  ]
}
