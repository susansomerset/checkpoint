{
  "name": "checkpoint",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": ">=9 <12"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prebuild": "node scripts/no-smoke-on-main.js || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:spec:unit": "jest tests/spec --passWithNoTests",
    "test:spec:e2e": "playwright test tests/spec/**/e2e.spec.ts",
    "test:spec:visual": "playwright test tests/spec/**/visual.spec.ts",
    "test:no-spec": "jest tests/no-spec",
    "test:smoke": "playwright test tests/smoke",
    "test:all": "npm run test:smoke && npm run test:spec:unit && npm run test:no-spec && npm run test:spec:e2e",
    "test:smoke-then-full": "node scripts/test-smoke-then-full.js",
    "test:refresh-cache": "node scripts/refresh-test-cache.js",
    "test:mocks": "jest tests/mocks/",
    "validate-contracts": "node scripts/validate-contracts.js",
    "validate-mock-data": "node scripts/validate-mock-data.js",
    "check-bundle-size": "node scripts/check-bundle-size.js",
    "test:sentry": "jest tests/integration/sentry.test.ts",
    "test:timezone": "TZ=America/Los_Angeles jest tests/lib/derive/timezone.test.ts",
    "size": "size-limit",
    "migrate:dry": "tsx -r tsconfig-paths/register scripts/backfill-kv-to-upstash.ts",
    "migrate:write": "tsx -r tsconfig-paths/register scripts/backfill-kv-to-upstash.ts --write",
    "storage:scan": "tsx -r tsconfig-paths/register scripts/storage-scan.ts",
    "scrape:canvas": "tsx src/lib/scraper/canvas-scraper.ts",
    "test:reset": "tsx -r tsconfig-paths/register scripts/test-reset.ts"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.8.0",
    "@headlessui/react": "^2.2.9",
    "@sentry/nextjs": "^10.15.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@uiw/react-json-view": "^2.0.0-alpha.39",
    "@upstash/redis": "^1.25.0",
    "@vercel/kv": "^3.0.0",
    "apexcharts": "^5.3.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "msw": "^2.11.3",
    "next": "15.5.3",
    "react": "^18.3.1",
    "react-apexcharts": "^1.7.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-json-tree": "^0.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@types/node": "^20.19.24",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.3",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.39",
    "size-limit": "^11.2.0",
    "tailwindcss": "^3.4.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4"
  },
  "size-limit": [
    {
      "path": ".next/static/chunks/*.js",
      "limit": "250 KB",
      "name": "Initial route JS"
    },
    {
      "path": ".next/static/chunks/app/*.js",
      "limit": "400 KB",
      "name": "Total app per route"
    }
  ]
}
